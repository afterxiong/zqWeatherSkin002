<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_4x2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="HardcodedText,SpUsage" >

    <ImageView
        android:id="@+id/skin_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        android:src="@drawable/skin_background" />

    <LinearLayout
        android:id="@+id/wrather"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/skin_background"
        android:layout_alignTop="@id/skin_background"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/layout_left"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.38"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/skin_weather_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/skin_weather_5" />

            <TextView
                android:id="@+id/skin_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/skin_weather"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/skin_temp_minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_temp_minus" />

                <ImageView
                    android:id="@+id/skin_temp_tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_temp_3" />

                <ImageView
                    android:id="@+id/skin_temp_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_temp_1" />

                <ImageView
                    android:id="@+id/skin_temp_degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_temp_degree" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/layout_right"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:layout_weight="0.62" >

            <ImageView
                android:id="@+id/skin_flower"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@null"
                android:padding="5dp"
                android:src="@drawable/skin_flower_0" />

            <LinearLayout
                android:id="@+id/skin_time_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/skin_flower"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/skin_time_hour_tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_2" />

                <ImageView
                    android:id="@+id/skin_time_hour_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />

                <ImageView
                    android:id="@+id/skin_time_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_colon" />

                <ImageView
                    android:id="@+id/skin_time_minute_tens"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />

                <ImageView
                    android:id="@+id/skin_time_minute_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_time_1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/skin_city_layotu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/skin_time_layout"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:gravity="center_vertical"
                android:paddingBottom="6dp"
                android:paddingTop="12dp" >

                <TextView
                    android:id="@+id/skin_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skin_city"
                    android:textColor="#FFFFFF" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@null"
                    android:src="@drawable/skin_back" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/skin_city_layotu"
                android:layout_alignStart="@id/skin_city_layotu"
                android:layout_below="@id/skin_city_layotu" >

                <TextView
                    android:id="@+id/skin_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/skin_week"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/skin_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp"
                    android:text="@string/skin_date"
                    android:textColor="#FFFFFF" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/skin_update"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/skin_update_image"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:contentDescription="@null"
                    android:padding="10dp"
                    android:src="@drawable/skin_update_image" />

                <ProgressBar
                    android:id="@+id/skin_update_progressbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:visibility="invisible" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>